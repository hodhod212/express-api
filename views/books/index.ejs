<h2 class="page-header">Sök Bok</h2>
<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Titel</label>
      <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label>Publicerad efter</label>
      <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
    </div>
    <div class="form-item">
      <label>Publicerad före</label>
      <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Sök</button>
  </div>
</form>
<br>
<%- include('../partials/bookGrid', { books: books, large: true }) %>